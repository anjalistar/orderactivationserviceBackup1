        <locationX>226</locationX>
        <locationY>323</locationY>
        <defaultConnector>
            <targetReference>Check_if_Order_has_Products</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Related_Order__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.NS_Add_On_Subscription_Id__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Record__Prior.NS_Add_On_Subscription_Id__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Related_Order</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <name>Is_Order_Cancelled_in_NetSuite</name>
