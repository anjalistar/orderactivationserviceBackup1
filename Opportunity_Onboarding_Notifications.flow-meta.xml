<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Check_Onboarding_Slack_Notification_Is_Active</name>
        <label>Check Onboarding Slack Notification Is Active</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Onboarding Slack -  Not Active</defaultConnectorLabel>
        <rules>
            <name>Onboarding_Slack_Active</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Setup.Flow_Environment_Settings__c.Slack_Notifications_Onboarding__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Publish_Onboarding_Platform_Event</targetReference>
            </connector>
            <label>Onboarding Slack -  Active</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_Subscription_Plan_Needs_Onboarding</name>
        <label>Check Subscription Plan Needs Onboarding</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Onboarding Not Requried</defaultConnectorLabel>
        <rules>
            <name>Onboarding_Required</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.WPE_Subscription_plan__r.Subscription_Family_Map__r.Onboarding_Plan__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Yes</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Check_Onboarding_Slack_Notification_Is_Active</targetReference>
            </connector>
            <label>Onboarding Required</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <interviewLabel>Opportunity - Onboarding {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Opportunity - Onboarding Notifications</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <name>Publish_Onboarding_Platform_Event</name>
        <label>Publish Onboarding Platform Event</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Opportunity_ID__c</field>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Region__c</field>
            <value>
                <elementReference>$Record.Owner.Assigned_Territory__c</elementReference>
            </value>
        </inputAssignments>
        <object>Onboarding_Slack__e</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordCreates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_Subscription_Plan_Needs_Onboarding</targetReference>
        </connector>
        <filterLogic>1 AND 2 AND (3 OR 4 OR 5 OR 6)</filterLogic>
        <filters>
            <field>StageName</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>StageName</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Closed Won</stringValue>
            </value>
        </filters>
        <filters>
            <field>Sales_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>New Sign Up</stringValue>
            </value>
        </filters>
        <filters>
            <field>Sales_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Cross-sell</stringValue>
            </value>
        </filters>
        <filters>
            <field>Sales_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Flywheel Cross-Sell</stringValue>
            </value>
        </filters>
        <filters>
            <field>Sales_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Upgrade</stringValue>
            </value>
        </filters>
        <object>Opportunity</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
